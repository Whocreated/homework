#include <bits/stdc++.h>
using namespace std;

int main() {
int n;
cin >> n;


for (int i=0; i<n; i++) {
   cout << n-i << ' ';
}
cout << endl;



    for (int i=1; i<=n; i++) {
   cout << i << ' ';
}
cout << endl;



    int j=1;
    while (j<=n) {
        cout << j << ' ';
        j++;
    }
    cout << endl;
   


    int k=n;
    while(k>0) {
        cout << k << ' ';
        k--;
    }
    cout << endl;
}
