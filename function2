#include <bits/stdc++.h>
using namespace std;

// 函數定義區域
const int n=6;
int total(int arr[], int n){
        int total =0;
    for(int i=0;i<n;i++){
        total += arr[i];
    }
    return total;
}

// 函數定義：返回陣列中的最大值
int maximum(int arr[], int n){
    int maxi=0;
    for(int i=0;i<n;i++){
        if(arr[i]>maxi){
            maxi=arr[i];
        }
    }
}

// 主函數
int main(){
    int arr[n]={1,2,3,4,5,6};
    cout << "總和為: " << total(arr,n) << endl;
    cout << "最大值為: " << maximum(arr,n) << endl;
    return 0;
}
